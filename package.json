{
	"name": "gorm-tool",
	"displayName": "GORM Tool",
	"description": "VS Code extension for GORM struct tag validation and Go ORM development assistance",
	"icon": "gorm-tool.png",
	"version": "1.0.0",
	"publisher": "clark-ioe",
	"author": {
		"name": "Clark-IOE",
		"email": "clark@intentoriented.com"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/clark-ioe/gorm-tool.git"
	},
	"bugs": {
		"url": "https://github.com/clark-ioe/gorm-tool/issues"
	},
	"homepage": "https://github.com/clark-ioe",
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"go",
		"golang", 
		"gorm",
		"orm",
		"validation",
		"tool",
		"struct-tags",
		"linter"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:go"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "GORM Tool",
			"properties": {
				"gormLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 1000,
					"description": "Controls the maximum number of GORM validation problems produced by the server."
				},
				"gormLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the GORM language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
